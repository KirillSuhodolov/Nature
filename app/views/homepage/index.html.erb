    <div class="item active">
      <%= image_tag "1.jpg" %>
      <div class="carousel-caption">
        <h4>Forest in fog</h4>
        <p>Forest landsckape</p>
      </div>
    </div>
    <div class="item">
     <%= image_tag "2.jpg" %>
